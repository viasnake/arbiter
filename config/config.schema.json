{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://arbiter.dev/config/v1.2.0/config.schema.json",
  "title": "Arbiter Configuration Schema v1.2.0",
  "type": "object",
  "additionalProperties": false,
  "required": ["server", "store", "governance", "policy", "audit"],
  "properties": {
    "server": {
      "type": "object",
      "additionalProperties": false,
      "required": ["listen_addr"],
      "properties": {
        "listen_addr": {
          "type": "string",
          "default": "0.0.0.0:8080"
        }
      }
    },
    "store": {
      "type": "object",
      "additionalProperties": false,
      "required": ["kind"],
      "properties": {
        "kind": {
          "type": "string",
          "enum": ["memory", "sqlite"]
        },
        "sqlite_path": {
          "type": "string"
        }
      },
      "allOf": [
        {
          "if": { "properties": { "kind": { "const": "sqlite" } } },
          "then": { "required": ["sqlite_path"] }
        }
      ]
    },
    "governance": {
      "type": "object",
      "additionalProperties": false,
      "required": ["allowed_providers"],
      "properties": {
        "allowed_providers": {
          "type": "array",
          "minItems": 1,
          "items": {
            "type": "string",
            "minLength": 1
          }
        }
      }
    },
    "policy": {
      "type": "object",
      "additionalProperties": false,
      "required": ["version"],
      "properties": {
        "version": {
          "type": "string",
          "minLength": 1
        },
        "require_approval_for_write_external": {
          "type": "boolean",
          "default": true
        },
        "require_approval_for_notify": {
          "type": "boolean",
          "default": false
        },
        "require_approval_for_start_job": {
          "type": "boolean",
          "default": false
        }
      }
    },
    "audit": {
      "type": "object",
      "additionalProperties": false,
      "required": ["jsonl_path"],
      "properties": {
        "jsonl_path": {
          "type": "string",
          "default": "./arbiter-audit.jsonl"
        },
        "immutable_mirror_path": {
          "type": "string"
        }
      }
    }
  }
}
